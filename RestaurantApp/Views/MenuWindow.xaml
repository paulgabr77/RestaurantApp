<Window x:Class="RestaurantApp.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantApp.Views"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Meniul Restaurantului" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#7209b7" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Meniu Restaurant" 
                     Foreground="White" 
                     FontSize="24" 
                     FontWeight="SemiBold"
                     VerticalAlignment="Center"
                     Margin="20,0,0,0"/>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        Margin="0,0,20,0">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding AddProductCommand}"
                        Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" 
                                               Foreground="White" 
                                               Width="24" 
                                               Height="24"/>
                        <TextBlock Text="Adaugă Produs" 
                                 Foreground="White" 
                                 Margin="8,0,0,0" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding OpenCartCommand}"
                        Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cart" 
                                               Foreground="White" 
                                               Width="24" 
                                               Height="24"/>
                        <TextBlock Text="Coș" 
                                 Foreground="White" 
                                 Margin="8,0,0,0" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding OpenAccountCommand}"
                        Margin="10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account" 
                                               Foreground="White" 
                                               Width="24" 
                                               Height="24"/>
                        <TextBlock Text="Cont" 
                                 Foreground="White" 
                                 Margin="8,0,0,0" 
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filtre și căutare -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Caută produs..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <ComboBox Grid.Column="1"
                          Margin="16,0"
                          ItemsSource="{Binding Categories}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding SelectedCategory}"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          materialDesign:HintAssist.Hint="Selectează categorie"/>

                <Button Grid.Column="2"
                        Content="Caută" 
                        Command="{Binding SearchCommand}" 
                        Width="100"
                        Style="{StaticResource MaterialDesignOutlinedButton}"/>
            </Grid>

            <!-- Lista de produse -->
            <ScrollViewer Grid.Row="1">
                <ItemsControl ItemsSource="{Binding Products}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                    Margin="0,0,0,20" 
                                    CornerRadius="10"
                                    BorderThickness="1"
                                    BorderBrush="#FFE0E0E0"
                                    Effect="{DynamicResource MaterialDesignElevationShadow2}">
                                <Grid Margin="15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Imagine produs -->
                                    <Border Grid.Column="0" 
                                            Width="200" 
                                            Height="200" 
                                            CornerRadius="10"
                                            Background="#FFF5F5F5">
                                        <Image Source="{Binding ImageUrl}" 
                                               Stretch="UniformToFill"/>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImageUrl}" Value="{x:Null}">
                                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                    </Border>

                                    <!-- Detalii produs -->
                                    <StackPanel Grid.Column="1" 
                                              Margin="20,0"
                                              VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                 FontSize="20"
                                                 FontWeight="Bold"
                                                 Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="{Binding Allergens, StringFormat='Alergeni: {0}'}"
                                                 Foreground="#FF666666"
                                                 Margin="0,0,0,10"/>
                                        
                                        <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}"
                                                 FontSize="18"
                                                 FontWeight="Bold"
                                                 Foreground="#FF1E88E5"/>
                                    </StackPanel>

                                    <!-- Buton adăugare în coș -->
                                    <Button Grid.Column="2"
                                            Command="{Binding DataContext.AddToCartCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            Content="Adaugă în coș"
                                            Padding="20,10"
                                            Background="#FF1E88E5"
                                            Foreground="White"
                                            BorderThickness="0"
                                            VerticalAlignment="Center"
                                            Style="{StaticResource MaterialDesignRaisedButton}">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window> 